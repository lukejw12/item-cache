{
  "type": "minecraft:confirmation",
  "title": {"text": "Fix Item", "color": "gold"},
  "body": [
    {
      "type": "plain_message",
      "contents": {"text": "Enter the item ID to assign to the held item.", "color": "gray"}
    }
  ],
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "id",
      "label": "Item ID",
      "max_length": 64,
      "width": 200
    }
  ],
  "yes": {
    "label": {"text": "Apply"},
    "action": {
      "type": "dynamic/run_command",
      "template": "function icache:admin/item/fix/apply {id:\"$(id)\"}"
    }
  },
  "no": {
    "label": {"text": "Cancel"}
  }
}