{
  "type": "minecraft:confirmation",
  "title": {"text": "Search Items", "color": "gold"},
  "body": [
    {
      "type": "plain_message",
      "contents": {"text": "Enter the exact item ID to find it.", "color": "gray"}
    }
  ],
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "keyword",
      "label": "Item ID",
      "max_length": 64,
      "width": 200
    }
  ],
  "yes": {
    "label": {"text": "Search"},
    "action": {
      "type": "dynamic/run_command",
      "template": "function icache:admin/search/search {keyword:\"$(keyword)\"}"
    }
  },
  "no": {
    "label": {"text": "Cancel"}
  }
}