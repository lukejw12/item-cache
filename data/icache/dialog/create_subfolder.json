{
  "type": "minecraft:confirmation",
  "title": {"text": "Create Subfolder", "color": "gold"},
  "body": [
    {
      "type": "plain_message",
      "contents": {"text": "Enter a name for the subfolder.", "color": "gray"}
    },
    {
      "type": "plain_message",
      "contents": {"text": "Avoid special characters like \" and \\", "color": "dark_gray"}
    }
  ],
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "folder_name",
      "label": "Subfolder Name",
      "max_length": 32,
      "width": 200
    }
  ],
  "yes": {
    "label": {"text": "Create"},
    "action": {
      "type": "dynamic/run_command",
      "template": "function icache:admin/folder/open/create_sub {folder_name:\"$(folder_name)\"}"
    }
  },
  "no": {
    "label": {"text": "Cancel"}
  }
}